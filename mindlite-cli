#!/usr/bin/env python3
"""Mindlite executable script."""

import sys
from pathlib import Path

# Add the mindlite package to Python path
package_dir = Path(__file__).parent / "mindlite"
sys.path.insert(0, str(package_dir.parent))

# Import and run the CLI
from mindlite.cli import main

if __name__ == "__main__":
    main()
